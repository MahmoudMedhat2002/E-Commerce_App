@model List<Producer>
@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>ProfilePicture</th>
            <th>FullName</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <img src="@item.ProfilePictureURL" class="rounded-circle" alt="@item.FullName" style="max-width : 150px"></img>
                </td>
                <td class="align-middle">
                    @item.FullName
                </td>
                <td class="align-middle">
                    @item.Bio
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-controller="Producers" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a class="btn btn-outline-info" asp-controller = "Producers" asp-action="Details" asp-route-id ="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                    <a class="btn btn-danger text-white" asp-controller="Producers" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-white" style="position : fixed ; right:25px; bottom:25px; z-index : 1000">
    <a asp-controller="Producers" asp-action="New" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>


