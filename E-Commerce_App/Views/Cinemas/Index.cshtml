@model List<Cinema>
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Description</th>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <img src="@item.Logo" class="rounded-circle" alt="@item.Name" style="max-width : 150px"></img>
                </td>
                <td class="align-middle">
                    @item.Name
                </td>
                <td class="align-middle">
                    @item.Description
                </td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-controller="Cinemas" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>|
                        <a class="btn btn-outline-info" asp-controller="Cinemas" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                        <a class="btn btn-danger text-white" asp-controller="Cinemas" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                }
                
            </tr>
        }
    </tbody>
</table>

<partial name="_NewButton" />


