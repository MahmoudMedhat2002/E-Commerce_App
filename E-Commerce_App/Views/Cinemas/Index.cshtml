@model List<Cinema>
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <img src="@item.Logo" class="rounded-circle" alt="@item.Name" style="max-width : 150px"></img>
                </td>
                <td class="align-middle">
                    @item.Name
                </td>
                <td class="align-middle">
                    @item.Description
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-controller="Cinemas" asp-action="Edit"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a class="btn btn-danger text-white" asp-controller="Cinemas" asp-action="Delete"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-white" style="position : fixed ; right:25px; bottom:25px; z-index : 1000">
    <a asp-controller="Cinemas" asp-action="New" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>


