@model E_Commerce_App.Models.Cinema

@{
    ViewData["Title"] = "Details";
}

<h1>Details for @Model.Name</h1>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="New">

            <div class="form-group text-center">
                <img id="LogoPreview" class="border-info rounded-circle" style="max-width:150px" />
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label" style="padding-bottom : 5px"></label>
                <input asp-for="Logo" class="form-control" readonly />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="padding-bottom : 5px"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label" style="padding-bottom : 5px"></label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <br />
            <div class="form-group">

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                }
                
                <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("LogoPreview");
            output.src = $("#Logo").val();
        })
    </script>
}
