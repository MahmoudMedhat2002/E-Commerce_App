@model List<Actor>

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>ProfilePicture</th>
            <th>FullName</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
           <tr>
               <td class="align-middle">
                    <img src="@item.ProfilePictureURL" class="rounded-circle" alt="@item.FullName" style="max-width : 150px"></img>
               </td>
               <td class="align-middle">
                   @item.FullName
               </td>
                <td class="align-middle">
                   @item.Bio
                </td>
               <td class="align-middle">
                   <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                       <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                       <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
               </td>
           </tr>
        }
    </tbody>
</table>

<div class="text-white" style="position : fixed ; right:25px; bottom:25px">
    <a asp-controller="Actors" asp-action="New" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>
