@model E_Commerce_App.Models.Actor

@{
    ViewData["Title"] = "New";
}

<h1>Add A New Actor</h1>

<hr />
<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="New">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-center">
                <img id ="ProfilePicturePreview" />
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="control-label" style="padding-bottom : 5px"></label>
                <input asp-for="ProfilePictureURL" class="form-control" />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FullName" class="control-label" style="padding-bottom : 5px"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Bio" class="control-label" style="padding-bottom : 5px"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $("#ProfilePictureURL").on("change" , function(){
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $(this).val();
        })
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
