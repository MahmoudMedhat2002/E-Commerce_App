@model List<Order>
@{
    ViewData["Title"] = "ListAllOrders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all orders</h4>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>OrderId</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.Id</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach(var item in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.Amount</span>[@item.Price.ToString("c")] - @item.Movie.Name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">
                            @order.OrderItems.Select(oi => oi.Movie.Price * oi.Amount).Sum().ToString("c");
                        </td>
                        <td class="align-middle"> - </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

